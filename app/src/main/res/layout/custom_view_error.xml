<androidx.constraintlayout.widget.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:id="@+id/errorContainer"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/black_dark"    android:gravity="center_horizontal">    <ImageView        android:id="@+id/iconIV"        android:layout_width="100dp"        android:layout_height="100dp"        android:layout_centerInParent="true"        android:layout_marginBottom="@dimen/margin_padding_large"        android:scaleType="centerCrop"        app:layout_constraintBottom_toTopOf="@+id/titleTV"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:srcCompat="@drawable/ic_no_internet"        app:tint="@color/light_red" />    <TextView        android:id="@+id/titleTV"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:fontFamily="@font/movike_medium"        android:gravity="center"        android:paddingHorizontal="@dimen/margin_padding_xxlarge"        android:text="@string/default_error_title"        android:textSize="@dimen/text_size_large"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/subtitleTV"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:layout_marginTop="@dimen/margin_padding_medium"        android:gravity="center"        android:paddingHorizontal="@dimen/margin_padding_xxlarge"        android:text="@string/default_error_subtitle"        android:textColor="@color/grey_light"        android:textSize="@dimen/text_size_medium"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/titleTV" />    <TextView        android:id="@+id/retryTV"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="@dimen/margin_padding_large"        android:background="@drawable/bgr_circle_orange_ripple_light_orange"        android:fontFamily="@font/movike_medium"        android:gravity="center"        android:paddingHorizontal="@dimen/margin_padding_medium"        android:paddingVertical="@dimen/margin_padding_micro"        android:text="@string/update"        android:textColor="@color/black"        android:textSize="@dimen/text_size_medium"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/subtitleTV" /></androidx.constraintlayout.widget.ConstraintLayout>