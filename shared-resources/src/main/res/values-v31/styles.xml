<resources>

    <style name="TextViewDefaultStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white_light</item>
        <item name="android:fontFamily">@font/movike_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Theme.ActionBar.TitleExpandedTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="Theme.ActionBar.TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:fontFamily">@font/movike_medium</item>
    </style>

</resources>